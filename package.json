    "eslint": "^8.24.0",
    "eslint-config-htmlacademy": "^5.1.2",
    "nodemon": "^2.0.20",
    "pino-pretty": "^9.1.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
